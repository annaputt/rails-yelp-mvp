<h2><%= @restaurant.name %></h2>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.category %></p>

<ul>
  <li><% @restaurant.reviews.each do |review|%></li>
  <%= review.content%>
    <%= review.rating%>
  <% end %>
  </ul>

<%= link_to "Delete",
  restaurant_path(@restaurant),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>

  <hr>
  <%= link_to restaurants_path do %>
    <i></i> Back to list
  <% end %>

<%= link_to "Add a new review", new_restaurant_review_path(@restaurant), class: "btn btn-info" %>
